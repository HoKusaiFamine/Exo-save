{# indique que le template hérite de la base.html.twig #}
{% extends 'base.html.twig' %}

{# définit un bloc pour le titre #}
{% block title %}Inscription
{% endblock %}

{# définit un bloc pour le corps de la page #}
{% block body %}
	<div class="d-flex m-0 row">
		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="d-flex justify-content-center formulaire">
			<h1>Inscription d'un professeur</h1>
		</div>
		{# formulaire insciption #}
		<div class="p-0">
			{{ form_start(registrationForm) }}
			{{ form_widget(registrationForm._token) }}
			<div class="d-flex justify-content-center my-4  ">
				<div class="mb-3">
				{# Champ nom d'utilisateur et prénom #}
					<div class="input-group-text-2 ">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Nom</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.nom_utilisateur) }}</div>
					</div>
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Prenom</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.prenom_utilisateur) }}</div>
					</div>
					{# Champ e-mail et téléphone #}
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Mail</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.email) }}</div>
					</div>
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Telephone</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.telephone_utilisateur) }}</div>
					</div>
					{# Champ mot de passe et confirmation de mot de passe #}
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Mot de passe</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.plainPassword.first) }}</div>
					</div>
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Confirmation mot de passe</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.plainPassword.second) }}</div>
					</div>
					{# Champ sélection de sexe et choix d'une couleur personnel #}
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">Selectionner votre sexe</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.sexe_utilisateur) }}</div>
					</div>
					<div class="input-group-text-2">
						{# <span class="input-group-text w-50 d-flex justify-content-center">choisir une couleur</span> #}
						<div class="d-flex justify-content-center">{{ form_row(registrationForm.color) }}</div>
					</div>
					{# Champ acceptation des conditions #}
					{# <div class="input-group-text-2 "> #}
						{# <span class="input-group-text w-50 d-flex justify-content-center">accepté les conditions</span> #}
						{# <div class="d-flex justify-content-center">{{ form_row(registrationForm.agreeTerms) }}</div>
					</div> #}
				</div>
			</div>
			<div class="d-flex justify-content-center ">
				<div class="my-2 p-2 d-flex justify-content-center align-item-center">
					<button type="submit" class="btn btn-lg btn-primary my-2">Créer un utilisateur</button>
				</div>
			</div>


		{% endblock %}
