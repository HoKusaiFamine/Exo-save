{# définit un bloc pour le corps de la page #}
{% block body %}
	
		<div class="d-flex justify-content-center formulaire">
			<h1>Créer un nouvel élève</h1>
		</div>
		{# formulaire insciption eleve #}
		
			{{ form_start(neweleveform) }}
     			<div class="d-flex justify-content-center">
				<div>
		
				{# Champ nom d'eleve et prénom #}
					<div class=" input-group-text-2">					
						<div class=" d-flex justify-content-center">{{ form_row(neweleveform.nom_eleve) }}</div>
					</div>
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.prenom_eleve) }}</div>
					</div>
					{# Champ e-mail et téléphone #}
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.email_eleve) }}</div>
					</div>
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.telephone_eleve) }}</div>
					</div>
					{# Niveau d'etude et metier exercer #}
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.niveau_etude) }}</div>
					</div>
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.metier_exerce) }}</div>
					</div>
					{# Champ sélection de sexe  #}
					<div class="input-group-text-2">
						<div class="d-flex justify-content-center">{{ form_row(neweleveform.sexe_eleve) }}</div>
					</div>
		
				</div>
			</div>
			<div class="d-flex justify-content-center ">
				 <div class="my-2 p-2 d-flex justify-content-center align-item-center">
      <button type="submit" class="btn btn-primary mt-2">Ajouter un élève</button>
    </div>
	
</div></div>
