{% extends 'base.html.twig' %}

{% block title %}
	Modifier un cours
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center formulaire">
		<h1>Modifier un cours</h1>
	</div>

	{# {{ include('cours/_form.html.twig', {'button_label': 'Modifier'}) }} #}


	{{ form_start(coursUpdateForm) }}

	<div class="d-flex justify-content-center">
		<div>
			<div class=" input-group-text-2">
				<span class="input-group-text w-50 d-flex justify-content-center">NomNombre d'élève max.</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.max_eleves) }}</div>
			</div>
			<div class=" input-group-text-2">
				<span class="input-group-text w-50 d-flex justify-content-center">Description du cours</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.description) }}</div>
			</div>
			<div class=" input-group-text-2">
				<span class="input-group-text w-50 d-flex justify-content-center">Libellé</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.libelle) }}</div>
			</div>
			<div class=" input-group-text-2">
				<span class="input-group-text w-50 d-flex justify-content-center">Heure du début du cours</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.heure_debut) }}</div>
			</div>
			<div class=" input-group-text-2">
				<span class="input-group-text w-50 d-flex justify-content-center">Heure de fin du cours</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.heure_fin) }}</div>
			</div>
			  {% if is_granted('ROLE_ADMIN') %}
       <div class="input-group-text-2">
						<span class="input-group-text w-50 d-flex justify-content-center">Professeur en charge du cours</span>
				<div class=" w-50 d-flex justify-content-center">{{ form_row(coursUpdateForm.utilisateur) }}</div>
			</div>
        {% endif %}
			
				

		</div>
	</div>
</div>
<div class="d-flex justify-content-around">
	<div class="w-25 d-flex justify-content-center order-3">{{ include('cours/_formEditUpdate.html.twig', { button_label: 'Modifier' }) }}</div>
	<div class="w-25 d-flex justify-content-center order-2">{{ include('cours/_delete_form.html.twig') }}</div>
	<div class="w-25 d-flex justify-content-center order-1">
		<a class="btn btn-outline-primary mt-2" href="{{ path('app_cours_index') }}">Retour à la liste</a>
	</div>
</div></div>{{ form_end(coursUpdateForm) }}{% endblock %}
