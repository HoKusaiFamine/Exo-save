{% extends 'base.html.twig' %}

{% block title %}Seances{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center text-center row px-5  mx-1">
    <h1 class="text-center my-5">Seances</h1>
    <div class=" d-flex justify-content-center row">
    <table class="table table-dark table-striped">
        <tbody>
            <tr>
                <th class="w-50" style="padding-left: 150px;">Id</th>
                <td class="w-50" style="padding-left: 150px;">{{ seance.id }}</td>
            </tr>
            <tr>
                <th class="w-50" style="padding-left: 150px;">Libelle</th>
                <td class="w-50" style="padding-left: 150px;">{{ seance.libelle }}</td>
            </tr>
            <tr>
                <th class="w-50" style="padding-left: 150px;">Horaires</th>
                <td class="w-50" style="padding-left: 150px;">de {{ seance.heureDebut ? seance.heureDebut|date('H:i') : '' }} </br> à 
                {{ seance.heureFin ? seance.heureFin|date('H:i') : '' }} </td>
            </tr>            
            <tr>
                <th class="w-50" style="padding-left: 150px;">Date</th>
                <td class="w-50" style="padding-left: 150px;">{{ seance.date ? seance.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th class="w-50" style="padding-left: 150px;">Description</th>
                <td class="w-50" style="padding-left: 150px;">{{ seance.description }}</td>
            </tr>            
        </tbody>
    </table>
    </div>
    

    <div class="d-flex justify-content-around">    
        <div class="w-25 d-flex justify-content-center order-3">
            <a class="btn btn-primary mt-2" href="{{ path('app_seances_edit', {'id': seance.id}) }}">éditer</a>
        </div>
    <div class="w-25 d-flex justify-content-center order-2">
        <a class="btn btn-outline-primary mt-2" href="{{ path('app_presence_index') }}">Retour à la liste des cours</a>
    </div>

    <div class="w-25 d-flex justify-content-center order-2">
    {{ include('seances/_delete_form.html.twig') }}
    </div>

    </div>
    
{% endblock %}
