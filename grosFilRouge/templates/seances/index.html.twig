{% extends 'base.html.twig' %}

{% block title %}List des séances {% endblock %}

{% block body %}
    <div class="d-flex justify-content-center text-center row px-5  mx-1">
    <h1 class="mt-3">Liste des séances</h1>
    <div class="p-5">
    <table class="table table-striped table-dark" id='dataTable'>
        <thead>
            <tr>
                <th class="bg-primary">Date</th>
                <th class="bg-primary">Libelle</th>                
                <th class="bg-primary">Horaires</th>             
                <th class="bg-primary">Description</th>                
                <th class="bg-primary">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr> 
                <td>{{ seance.date ? seance.date|date('d-m-Y') : '' }}</td>
                <td>{{ seance.libelle }}</td>               
                <td style="width: 10%;">de {{ seance.heureDebut ? seance.heureDebut|date('H:i') : '' }} </br> à 
                {{ seance.heureFin ? seance.heureFin|date('H:i') : '' }}</td>            
                <td>{{ seance.description }}</td>                
                <td style="width: 13%;">
                    <a class="btn btn-sm btn-outline-primary m-1" href="{{ path('app_seances_show', {'id': seance.id}) }}">infos</a>
                    <a class="btn btn-sm btn-outline-primary m-1" href="{{ path('app_seances_edit', {'id': seance.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">pas de séances trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    <div class="w-25 d-flex justify-content-center order-2">
        <a class="btn btn-outline-primary mt-2" href="{{ path('app_cours_index') }}">Retour à la liste des cours</a>
    </div>

    
{% endblock %}
